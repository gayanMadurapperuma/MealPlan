{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@adapters/*": ["./lib/stateless/src/adapters/*"],
      "@config/*": ["../lib/stateless/src/config/*"],
      "@domain/*": ["./lib/stateless/src/domain/*"],
      "@entity/*": ["./lib/stateless/src/entity/*"],
      "@errors/*": ["./lib/stateless/src/errors/*"],
      "@repositories/*": ["./lib/stateless/src/repositories/*"],
      "@schemas/*": ["./lib/stateless/src/schemas/*"],
      "@models/*": ["./lib/stateless/src/models/*"],
      "@use-cases/*": ["./lib/stateless/src/use-cases/*"],
      "@packages/*": ["./lib/packages/*"],
      "@events/*": ["./lib/stateless/src/events/*"]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
